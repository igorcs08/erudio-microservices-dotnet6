@using GeekShopping.Web.Models;

@model ProductModel

<form asp-action="ProductDelete">
    <input asp-for="Id" hidden/>
    <br/>
    <div class="container border p-3">
        <h1 class="text-primary">Delete product</h1>
        <hr/>
        
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Name" class="form-control"/>
            </div>
        </div>
        
        <br />

        <div class="row">
            <br />
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Price" class="form-control" />
            </div>
        </div>

        <br />

        <div class="row">
            <br />
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <textarea rows="4" asp-for="Description" class="form-control"></textarea>
            </div>
        </div>

        <br />

        <div class="row">
            <br />
            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="CategoryName" class="form-control" />
            </div>
        </div>
        
        <br />

        <div class="row">
            <br />
            <div class="col-2">
                <label asp-for="ImageURL" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="ImageURL" class="form-control" />
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-primary btn form-control">Back to Products List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>